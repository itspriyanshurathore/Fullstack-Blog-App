<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= post.title %></title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <style>
      .post-hero {
        height: 50vh;
        background: linear-gradient(rgba(0, 0, 0, 0.45), rgba(0, 0, 0, 0.45)),
          url("<%= post.images[0]?.url %>");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        border-radius: 0 0 20px 20px;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .post-hero h1 {
        color: #fff;
        font-size: 3.2rem;
        font-weight: 800;
        text-align: center;
        text-shadow: 0px 4px 12px rgba(0, 0, 0, 0.7);
        padding: 0 15px;
      }

      .post-container {
        max-width: 900px;
        margin: 40px auto;
      }

      .post-content {
        font-size: 1.25rem;
        line-height: 1.9;
        color: #333;
        margin-top: 20px;
        white-space: pre-line;
        background: #fff;
        padding: 30px 40px;
        border-radius: 18px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.07);
      }

      .post-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: -25px;
        background: #fff;
        padding: 20px 30px;
        border-radius: 15px;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.06);
      }

      .post-info .author {
        font-weight: 600;
        font-size: 1.05rem;
      }

      .back-btn {
        margin: 40px auto;
        display: block;
        width: fit-content;
        padding: 10px 25px;
        font-size: 1.1rem;
        border-radius: 50px;
      }
    </style>
  </head>

  <body class="bg-light">
    <!-- Navbar -->
    <%- include("partials/header") %>

    <!-- HERO SECTION -->
    <section class="post-hero">
      <h1><%= post.title %></h1>
    </section>

    <!-- MAIN CONTENT -->
    <div class="post-container">
      <div class="post-info">
        <span class="badge bg-primary"><%= post.category %></span>

        <p class="text-muted author m-0"><%= post.author?.username %></p>
      </div>

      <div class="post-content"><%= post.description %></div>
      <div class="post-content"><%= post.content %></div>

      <!-- ⭐ COMMENTS SECTION -->
      <div class="mt-5">
        <h3 class="fw-bold mb-4">Comments</h3>

        <!-- COMMENT FORM -->
        <% if (user) { %>
        <form
          action="/post/<%= post._id %>/comment"
          method="POST"
          class="card p-4 shadow-sm mb-4"
        >
          <label class="form-label fw-semibold">Write a comment</label>
          <textarea
            name="content"
            class="form-control"
            rows="3"
            placeholder="Share your thoughts..."
            required
          ></textarea>

          <button type="submit" class="btn btn-primary px-4 mt-3">
            Post Comment
          </button>
        </form>
        <% } else { %>
        <p class="text-muted">
          You must <a href="/login">login</a> to comment.
        </p>
        <% } %>

        <!-- COMMENT LIST -->
        <% if (post.comments.length === 0) { %>
        <p class="text-muted">No comments yet. Be the first to comment!</p>
        <% } %> <% post.comments.forEach(comment => { %>
        <div class="card p-3 shadow-sm mb-3">
          <div class="d-flex align-items-center">
            <div
              class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-3"
              style="width: 45px; height: 45px; font-size: 1.3rem"
            >
              <%= comment.author.username.charAt(0).toUpperCase() %>
            </div>

            <div class="flex-grow-1">
              <h6 class="m-0 fw-bold"><%= comment.author.username %></h6>
              <small class="text-muted"
                ><%= new Date(comment.createdAt).toDateString() %></small
              >
            </div>

            <!-- ⭐ Show Edit/Delete Only for Owner -->
            <% if (user && user._id.toString() ===
            comment.author._id.toString()) { %>
            <div>
              <button
                class="btn btn-sm btn-outline-primary"
                data-bs-toggle="modal"
                data-bs-target="#editCommentModal-<%= comment._id %>"
              >
                Edit
              </button>

              <form
                action="/comment/<%= comment._id %>/delete"
                method="POST"
                class="d-inline"
              >
                <button class="btn btn-sm btn-outline-danger">Delete</button>
              </form>
            </div>
            <% } %>
          </div>

          <p class="mt-3" style="line-height: 1.6"><%= comment.content %></p>
        </div>

        <!-- EDIT COMMENT MODAL -->
        <div
          class="modal fade"
          id="editCommentModal-<%= comment._id %>"
          tabindex="-1"
        >
          <div class="modal-dialog">
            <form
              action="/comment/<%= comment._id %>/edit"
              method="POST"
              class="modal-content"
            >
              <div class="modal-header">
                <h5 class="modal-title">Edit Comment</h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                ></button>
              </div>

              <div class="modal-body">
                <textarea name="content" class="form-control" rows="3" required>
<%= comment.content %></textarea
                >
              </div>

              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                >
                  Cancel
                </button>
                <button type="submit" class="btn btn-primary">
                  Save Changes
                </button>
              </div>
            </form>
          </div>
        </div>

        <% }) %>
      </div>

      <a href="/" class="btn btn-secondary back-btn"> Back to Home </a>
    </div>

    <!-- Footer -->
    <%- include("partials/footer") %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
